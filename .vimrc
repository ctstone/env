set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set autoindent
set smartindent

" INTERFACE
set backspace=indent,eol,start
set showmatch
set nocompatible
set ruler
set nowrap
set sidescroll=1
set visualbell t_vb=

" SEARCH
set nohlsearch
set incsearch
set matchtime=1

set ruler
set hlsearch

" SYNTAX
syntax on
colorscheme desert

" NOISE
set visualbell
set t_vb=
